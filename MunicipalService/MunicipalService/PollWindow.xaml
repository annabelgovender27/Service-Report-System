<Window x:Class="MunicipalService.PollWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Community Poll" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🗳️ Community Poll" FontSize="20" FontWeight="Bold"
                       Foreground="#2E7D32" HorizontalAlignment="Center"/>
            <TextBlock Text="Your opinion helps us improve services!" 
                       HorizontalAlignment="Center" Foreground="#666666"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Poll Content -->
        <StackPanel Grid.Row="1">
            <TextBlock x:Name="QuestionText" TextWrapping="Wrap" FontSize="16"
               FontWeight="SemiBold" Margin="0,0,0,20"/>

            <StackPanel x:Name="OptionsPanel" Margin="0,0,0,20">
               
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Submit Vote" Width="100" Background="#4CAF50" 
                    Foreground="White" FontWeight="Bold" Click="SubmitVote_Click"/>
        </StackPanel>
    </Grid>
</Window>