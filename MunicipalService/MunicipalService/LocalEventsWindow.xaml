<Window x:Class="MunicipalService.LocalEventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Local Events And Announcements" 
        Height="750" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FDF9">

    <Window.Resources>
        <Color x:Key="PrimaryColor">#2E7D32</Color>
        <Color x:Key="PrimaryDarkColor">#1B5E20</Color>
        <Color x:Key="AccentColor">#4CAF50</Color>
        <Color x:Key="SecondaryColor">#FF9800</Color>
        <Color x:Key="LightBackground">#F8FDF9</Color>
        <Color x:Key="CardBackground">#FFFFFF</Color>
        <Color x:Key="HoverColor">#E8F5E9</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
        <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>

        <!-- Back Button Style (same as ReportIssuesWindow) -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Outline Button Style -->
        <Style x:Key="OutlineButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Event Card Style -->
        <Style x:Key="EventCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Category Chip Style -->
        <Style x:Key="CategoryChipStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,6,4"/>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          Background="Transparent"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="RecommendationCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LightBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button (same as ReportIssuesWindow) -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="10">
            <DockPanel>
                <Button x:Name="BackButton"
                        Content="← Back to Main Menu"
                        DockPanel.Dock="Left"
                        Click="BackButton_Click"
                        Width="140"
                        Style="{StaticResource BackButtonStyle}"/>
                <TextBlock Text="Local Events And Announcements"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Search, Filters, Recently Viewed, and Recommendations -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Search Card -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="12" 
                Padding="20"
                Margin="0,0,0,15"
                BorderBrush="#E8E8E8"
                BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="🔍 Search &amp; Filters" 
                           Style="{StaticResource SectionHeader}"/>

                            <!-- Search Box with Icon -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Search events..." 
                               FontWeight="SemiBold" 
                               FontSize="13"
                               Foreground="{StaticResource PrimaryDarkBrush}"
                               Margin="0,0,0,6"/>
                                <TextBox x:Name="SearchTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="SearchTextBox_TextChanged"/>
                            </StackPanel>

                            <!-- Category Filter -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="📂 Category" 
                               FontWeight="SemiBold" 
                               FontSize="13"
                               Foreground="{StaticResource PrimaryDarkBrush}"
                               Margin="0,0,0,6"/>
                                <ComboBox x:Name="CategoryComboBox" 
                              Style="{StaticResource ModernComboBox}"
                              SelectionChanged="CategoryComboBox_SelectionChanged">
                                    <ComboBoxItem>All Categories</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>

                            <!-- Date Filter -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="📅 Date" 
                               FontWeight="SemiBold" 
                               FontSize="13"
                               Foreground="{StaticResource PrimaryDarkBrush}"
                               Margin="0,0,0,6"/>
                                <DatePicker x:Name="DateFilterPicker" 
                                Height="36"
                                Padding="8"
                                SelectedDateChanged="DateFilterPicker_SelectedDateChanged"/>
                            </StackPanel>

                            <!-- Clear Filters -->
                            <Button x:Name="ClearFiltersButton" 
                        Content="🔄 Clear All Filters" 
                        Style="{StaticResource OutlineButton}"
                        Click="ClearFiltersButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Recently Viewed Card -->
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="12" 
                Padding="20"
                Margin="0,0,0,15"
                BorderBrush="#E8E8E8"
                BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="👁️ Recently Viewed" 
                           Style="{StaticResource SectionHeader}"/>
                            <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="1"
                        Height="120">
                                <ListView x:Name="RecentlyViewedList" 
                              Background="Transparent"
                              BorderThickness="0"
                              SelectionChanged="RecentlyViewedList_SelectionChanged"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8,6" 
                                        Background="Transparent"
                                        CornerRadius="4"
                                        Margin="2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Title}" 
                                               TextWrapping="Wrap"
                                               FontSize="11"
                                               Foreground="#555555"/>
                                            </Border>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Recommendations Card -->
                    <Border x:Name="RecommendationsSection"
                Background="{StaticResource CardBackgroundBrush}" 
                CornerRadius="12" 
                Padding="20"
                Margin="0,0,0,0"
                BorderBrush="#E8E8E8"
                BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="🌟 You Might Also Like" 
                           Style="{StaticResource SectionHeader}"/>

                            <!-- Scrollable recommendations area -->
                            <Border Background="#F8F9FA" 
                        CornerRadius="8" 
                        Padding="1"
                        Height="200">
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Padding="1">
                                    <ItemsControl x:Name="SidebarRecommendationsItemsControl">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="0,0,0,10" 
                                            Background="#F8F9FA"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#F8F9FA"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>

                                                    <Grid Margin="12,10">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Text="{Binding Title}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="12"
                                                       Foreground="{StaticResource PrimaryDarkBrush}"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,4"/>

                                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,4">
                                                            <TextBlock Text="{Binding Date, StringFormat='MMM dd'}" 
                                                           FontSize="10"
                                                           Foreground="#666666"/>
                                                            <TextBlock Text=" • " 
                                                           FontSize="10"
                                                           Foreground="#666666"/>
                                                            <TextBlock Text="{Binding Category}" 
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource PrimaryDarkBrush}"/>
                                                        </StackPanel>

                                                        <Button Grid.Row="2"
                                                    Content="View Details" 
                                                    Style="{StaticResource OutlineButton}"
                                                    FontSize="10"
                                                    Padding="6,2"
                                                    Click="RecommendationViewButton_Click"
                                                    Tag="{Binding}"
                                                    HorizontalAlignment="Stretch"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>

                            <!-- No Recommendations Message -->
                            <Border x:Name="NoRecommendationsText" 
                        Background="#FAFAFA"
                        CornerRadius="6"
                        Padding="15,12"
                        Visibility="Visible">
                                <StackPanel>
                                    <TextBlock Text="No recommendations yet" 
                                   FontSize="11"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                                    <TextBlock Text="View event details to get suggestions" 
                                   FontSize="10"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Enhanced Events Display Area -->
            <ScrollViewer Grid.Column="2" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="5">
                <StackPanel>
                    <!-- Results Header -->
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="10"
                            Padding="20,15"
                            Margin="0,0,0,15"
                            BorderBrush="#E8E8E8"
                            BorderThickness="1">
                        <Grid>
                            <TextBlock x:Name="ResultsHeader" 
                                       Text="🎯 Upcoming Events" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryDarkBrush}"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="ResultsCount" 
                                       Text=""
                                       FontSize="13"
                                       Foreground="#666666"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Events List -->
                    <ItemsControl x:Name="EventsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,12" 
                                        Background="{StaticResource CardBackgroundBrush}"
                                        BorderBrush="#E8E8E8"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Padding="0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                                            <Setter Property="BorderBrush" Value="#E8E8E8"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid Margin="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Date Badge -->
                                        <Border Grid.Column="0" 
                                                Background="{StaticResource PrimaryBrush}"
                                                CornerRadius="8"
                                                Padding="12,8"
                                                Margin="0">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Date, StringFormat='MMM'}" 
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           FontSize="12"
                                                           TextAlignment="Center"/>
                                                <TextBlock Text="{Binding Date, StringFormat='dd'}" 
                                                           FontWeight="Black"
                                                           Foreground="White"
                                                           FontSize="20"
                                                           TextAlignment="Center"
                                                           Margin="0,-2,0,0"/>
                                                <TextBlock Text="{Binding Date, StringFormat='yyyy'}" 
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           FontSize="10"
                                                           TextAlignment="Center"
                                                           Margin="0,-2,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Event Details -->
                                        <StackPanel Grid.Column="2" 
                                                    Margin="15,12,0,12"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" 
                                                       FontWeight="Bold" 
                                                       FontSize="16"
                                                       Foreground="{StaticResource PrimaryDarkBrush}"
                                                       Margin="0,0,0,6"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       TextWrapping="Wrap"
                                                       Foreground="#666666"
                                                       FontSize="13"
                                                       LineHeight="18"
                                                       Margin="0,0,0,8"/>

                                            <!-- Categories and Location -->
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border Style="{StaticResource CategoryChipStyle}">
                                                    <TextBlock Text="{Binding Category}" 
                                                               FontSize="11"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource PrimaryDarkBrush}"/>
                                                </Border>
                                                <StackPanel Orientation="Horizontal" 
                                                            VerticalAlignment="Center"
                                                            Margin="10,0,0,0">
                                                    <TextBlock Text="📍" 
                                                               FontSize="10"
                                                               Margin="0,0,4,0"/>
                                                    <TextBlock Text="{Binding Location}" 
                                                               FontSize="11"
                                                               Foreground="#666666"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Organizer and Action -->
                                        <StackPanel Grid.Column="3" 
                                                    VerticalAlignment="Center"
                                                    Margin="15,0,15,0"
                                                    HorizontalAlignment="Right">
                                            <StackPanel Margin="0,0,0,10">
                                                <TextBlock Text="👤 Organizer" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="11"
                                                           Foreground="{StaticResource PrimaryDarkBrush}"/>
                                                <TextBlock Text="{Binding Organizer}" 
                                                           FontSize="11"
                                                           Foreground="#666666"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="120"/>
                                            </StackPanel>
                                            <Button Content="View Details" 
                                                    Style="{StaticResource OutlineButton}"
                                                    FontSize="11"
                                                    Padding="8,4"
                                                    Click="ViewDetailsButton_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- No Results Message -->
                    <Border x:Name="NoResultsText" 
                            Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="12"
                            Padding="40,30"
                            Margin="0,20"
                            Visibility="Collapsed"
                            BorderBrush="#E8E8E8"
                            BorderThickness="1">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📭" 
                                       FontSize="40"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="No events found" 
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryDarkBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Try adjusting your search criteria or filters" 
                                       Foreground="#666666" 
                                       FontSize="13"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>