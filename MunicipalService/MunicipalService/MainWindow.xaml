<Window x:Class="MunicipalService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MunicipalService"
        mc:Ignorable="d"
        Title="Municipal Services App" Height="750" Width="1100" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <!-- Green Color Palette to match PollWindow -->
        <Color x:Key="PrimaryColor">#2E7D32</Color>
        <!-- Dark Green -->
        <Color x:Key="PrimaryDarkColor">#1B5E20</Color>
        <!-- Darker Green -->
        <Color x:Key="AccentColor">#4CAF50</Color>
        <!-- Medium Green -->
        <Color x:Key="LightBackground">#F1F8E9</Color>
        <!-- Light Green Background -->
        <Color x:Key="CardBackground">#FFFFFF</Color>
        <!-- White -->

        <!-- Convert Colors to Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="LightBackgroundBrush" Color="{StaticResource LightBackground}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernMenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource LightBackgroundBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FAFAFA"/>
                                <Setter Property="Foreground" Value="#BDBDBD"/>
                                <Setter Property="BorderBrush" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <TextBlock Text="✕" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border Margin="20" CornerRadius="15" Background="{StaticResource LightBackgroundBrush}">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" Color="#CCCCCC" Opacity="0.3" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Height="40" 
                    CornerRadius="15,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Municipal Services" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Button Grid.Column="2" Style="{StaticResource CloseButtonStyle}" 
                            Margin="0,0,10,0" Click="CloseButton_Click"
                            ToolTip="Close application"/>
                </Grid>
            </Border>

            <!-- Main Content with ScrollViewer -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20,0,40,20">
                        <TextBlock Text="Welcome to" FontSize="28" Foreground="{StaticResource PrimaryDarkBrush}" 
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="Municipal Services" FontSize="36" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryDarkBrush}" Margin="0,0,0,20"/>

                        <TextBlock Text="Your one-stop platform for all municipal services in South Africa. Report issues, stay informed about local events, and track your service requests."
                                   FontSize="16" Foreground="#666666" TextWrapping="Wrap" Margin="0,0,0,30"
                                   LineHeight="24" MaxWidth="400"/>
                        <TextBlock Text="Please select a task:" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryDarkBrush}"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                            <Button x:Name="ReportIssuesButton" 
                                    Content="Report Issues" 
                                    Style="{StaticResource ModernMenuButtonStyle}"
                                    Click="ReportIssuesButton_Click"/>

                            <Button x:Name="LocalEventsButton" 
                                    Content="Local Events and Announcements" 
                                    Style="{StaticResource ModernMenuButtonStyle}"
                                    Click="LocalEventsButton_Click"/>

                            <Button x:Name="ServiceStatusButton" 
                                    Content="Service Request Status" 
                                    Style="{StaticResource ModernMenuButtonStyle}"
                                    Click="ServiceRequestStatusButton_Click"
                    />
                        </StackPanel>

                        <!-- Poll Notification Section -->
                        <Border x:Name="PollNotification" Margin="0,20,0,0" Padding="15" 
                                Background="#E8F5E9" CornerRadius="10" BorderThickness="1" 
                                BorderBrush="#4CAF50" Visibility="Visible">
                            <StackPanel>
                                <TextBlock Text="This Week's Poll" FontWeight="Bold" FontSize="14"
                                           Foreground="#2E7D32" Margin="0,0,0,10"/>
                                <TextBlock Text="Share your opinion on municipal priorities!" 
                                           TextWrapping="Wrap" Margin="0,0,0,10"/>

                                <Button Content="Participate Now" Width="120" HorizontalAlignment="Left"
                                        Click="OpenPollButton_Click" Background="#4CAF50" Foreground="White"
                                        Padding="10,5" Cursor="Hand"/>
                            </StackPanel>
                        </Border>

                        <!-- Poll Results Section -->
                        <Border x:Name="PollResults" Margin="0,20,0,0" Padding="15" 
                                Background="#F5F5F5" CornerRadius="10" BorderThickness="1" 
                                BorderBrush="#E0E0E0" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Current Poll Results" FontWeight="Bold" FontSize="14"
                                           Foreground="{StaticResource PrimaryDarkBrush}" Margin="0,0,0,10"/>

                                <TextBlock x:Name="PollQuestionText" Text="What should be the municipality's top priority?" 
                                           TextWrapping="Wrap" Margin="0,0,0,10" FontWeight="SemiBold"/>

                                <ItemsControl x:Name="PollResultsItems">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="{Binding OptionText}" FontWeight="SemiBold"/>
                                                <Grid Margin="0,2">
                                                    <ProgressBar Value="{Binding VoteCount}" Maximum="{Binding DataContext.MaxVotes, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                 Height="15" Background="#E0E0E0" Foreground="{StaticResource PrimaryBrush}"/>
                                                    <TextBlock Text="{Binding VoteCount}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                               Foreground="White" FontSize="10" FontWeight="Bold"/>
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <TextBlock x:Name="TotalVotesText" Text="Total votes: 7" FontSize="11" 
                                           FontStyle="Italic" Margin="0,10,0,0" HorizontalAlignment="Right"/>

                                <Button Content="View Details" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0"
                                        Click="OpenPollButton_Click" Background="Transparent" Foreground="{StaticResource PrimaryBrush}"
                                        BorderThickness="1" BorderBrush="{StaticResource PrimaryBrush}" Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Side -->
                    <Border Grid.Column="1" Width="400" Height="400" Margin="20,0,0,20" 
                            Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="12" BorderThickness="1" BorderBrush="#EEEEEE"
                            VerticalAlignment="Center">

                        <Image Source="Images/cityview.jpg" Stretch="UniformToFill" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>